#!/bin/bash

# 要创建的模块列表
modules=("not" "bok" "tra" "mon")

# 创建 page 和 css/page 下的文件
for module in "${modules[@]}"; do
  echo "Creating page/${module}.jsx"
  touch "page/${module}.jsx"

  echo "Creating css/page/${module}.css"
  mkdir -p "css/page"
  touch "css/page/${module}.css"
done

# 参考 doc 模块，在 widget 中为每个模块创建结构
for module in "${modules[@]}"; do
  base="widget/${module}"
  echo "Creating widget/${module} folder structure..."

  # 创建主目录及基础组件
  mkdir -p "$base/content"
  mkdir -p "$base/sideBar"
  mkdir -p "$base/topBar"
  mkdir -p "$base/win"

  touch "$base/App.jsx"
  touch "$base/global.jsx"

  # content 下的组件
  touch "$base/content/${module}Content.jsx"
  touch "$base/content/downloadBtn.jsx"
  touch "$base/content/editBtn.jsx"
  touch "$base/content/fileItem.jsx"
  touch "$base/content/fileText.jsx"

  # sideBar 下的组件
  touch "$base/sideBar/${module}SideBar.jsx"
  touch "$base/sideBar/copy.jsx"
  touch "$base/sideBar/del.jsx"
  touch "$base/sideBar/move.jsx"
  touch "$base/sideBar/paste.jsx"
  touch "$base/sideBar/reload.jsx"
  touch "$base/sideBar/upload.jsx"

  # topBar 下的组件
  touch "$base/topBar/${module}TopBar.jsx"
  touch "$base/topBar/goUp.jsx"
  touch "$base/topBar/newDirBtn.jsx"
  touch "$base/topBar/newDirInput.jsx"
  touch "$base/topBar/showPath.jsx"
  touch "$base/topBar/topBarBox.jsx"

  # win 下的组件
  touch "$base/win/${module}Win.jsx"
  touch "$base/win/loadWin.jsx"
  touch "$base/win/uploadWin.jsx"
done

echo "✅ 所有模块已创建完成！"

